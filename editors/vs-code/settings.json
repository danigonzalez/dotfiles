{
    "terraform.indexing": {
        "enabled": false,
        "liveIndexing": false,
        "delay": 500,
        "exclude": [
            ".terraform/**/*",
            "**/.terraform/**/*"
        ]
    },
    "terraform.languageServer": {
        "external": true,
        "args": [
            "serve"
        ]
    },
    // üëÄ VS Code UI
    "editor.cursorBlinking": "smooth",
    "workbench.activityBar.visible": true,
    "workbench.colorTheme": "Gruvbox Dark Medium",
    "workbench.editor.enablePreview": false,
    "workbench.editor.showTabs": true,
    // ‚öôÔ∏è Common settings
    "window.restoreWindows": "all",
    "window.openFoldersInNewWindow": "on",
    "window.openFilesInNewWindow": "off",
    "workbench.startupEditor": "newUntitledFile",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "search.useGlobalIgnoreFiles": true,
    "files.autoSave": "onFocusChange",
    "files.associations": {
        "Dockerfile-*": "dockerfile"
    },
    // ‚úçÔ∏è Editor
    "editor.minimap.enabled": true,
    "editor.formatOnPaste": false,
    "editor.formatOnSave": false,
    "editor.fontFamily": "Dank Mono, Hack, Menlo, Monaco, monospace",
    "editor.lineHeight": 32,
    "editor.rulers": [120],
    "editor.wordWrap": "on",
    "editor.wrappingIndent": "indent",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.tree.horizontalScrolling": true,
    "files.trimTrailingWhitespace": true,
    // ‚¨õ Terminal
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.lineHeight": 1.4,
    "terminal.integrated.shell.osx": "/bin/zsh",
    "terminal.integrated.fontFamily": "MesloLGS NF,Dank Mono, Hack, Menlo, Monaco, monospace",
    "terminal.integrated.rendererType": "canvas",
    // üë®‚Äçüíª Programming languages
    // Avoid duplicate suggestions with PHP IntelliSense plugin
    "php.suggest.basic": false,
    "php.executablePath": "/usr/local/bin/php",
    "[markdown]": {
        "editor.renderWhitespace": "all",
        "editor.acceptSuggestionOnEnter": "off",
        "editor.parameterHints.enabled": false,
        "editor.quickSuggestions": false,
        "editor.snippetSuggestions": "none",
        "editor.formatOnSave": false // Converts "*" lists into "-" and other nasty things :/
    },
    // üêô Git
    "git.autofetch": true,
    "git.alwaysSignOff": true,
    "git.defaultCloneDirectory": "~/dev",
    "git.fetchOnPull": true,
    "git.rebaseWhenSync": true,
    "git.showPushSuccessNotification": true,
    // üé® CodelyTV theme draft
    "workbench.colorCustomizations": {
        "focusBorder": "#10fb7a"
    },
    "workbench.statusBar.visible": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "terminal.integrated.fontSize": 14
}
